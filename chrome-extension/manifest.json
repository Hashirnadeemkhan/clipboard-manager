{
  "manifest_version": 3,
  "name": "Clipboard Manager",
  "version": "1.0",
  "description": "Automatically save and manage your clipboard history",
  "permissions": ["storage", "activeTab", "clipboardWrite", "clipboardRead"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Clipboard Manager"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
